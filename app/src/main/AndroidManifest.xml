<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.foodemporium">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:hardwareAccelerated="false"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".MainActivity"></activity>

        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SelectAreaActivity" />
        <activity android:name=".DetailsEnterActivity" />
        <activity android:name=".SelectStateActivity" />
        <activity android:name=".LetsStartedActivity" />
        <activity android:name=".ConfirmDetailsEnterActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".RestaurantsActivity" />
        <activity android:name=".RestaurantsBookingTypeActivity" />
        <activity android:name=".EnterAddressActivity" />
        <activity android:name=".FoodCategoryActivity" />
        <activity android:name=".FoodActivity" />
        <activity android:name=".FoodCartActivity" />
        <activity android:name=".FoodCalendarActivity" />
        <activity android:name=".ConfirmBookTableActivity" />
        <activity android:name=".TimeSlotActivity" />


    </application>

</manifest>